run = "streamlit run main.py, api.py, app.py"
modules = ["python-3.12", "web", "nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run app.py"]

[workflows]
runButton = "Run All Services"

[[workflows.workflow]]
name = "Run"
author = 40783381
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"

[[workflows.workflow]]
name = "Run Services"
author = 40783381
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"

[[workflows.workflow]]
name = "Run All Services"
author = 40783381
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.address 0.0.0.0 --server.headless true"

[[ports]]
localPort = 8501
externalPort = 80

[[ports]]
localPort = 8502
externalPort = 3000
